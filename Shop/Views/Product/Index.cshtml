@using Shop.Data
@model Product[]
@{
	ViewData["Title"] = "Sản phẩm";
}

@section Styles{
	<style>
		.image-container {
			width: 100%;
			height: 300px;
			position: relative;
			overflow: hidden;
		}

			.image-container img {
				width: auto;
				height: 100%;
				position: absolute;
				top: 50%;
				left: 50%;
				transform: translate(-50%, -50%);
				object-fit: contain;
			}
	</style>
}

<h2>Danh sách sản phẩm</h2>
<div>
	<form method="get">
		<div class="row">
			<div class="col-sm-6">
				<input class="form-control" placeholder="Tìm kiếm" name="keyword" value="@ViewData["keyword"]" />
			</div>
			<div class="col-sm-2">
				<button type="submit" class="btn btn-outline-primary">Tìm kiếm</button>
			</div>
		</div>
	</form>
</div>
<div class="row">
	@if(Model.Length > 0)
	{
		foreach (var item in Model)
		{
			<div class="col-sm-4 mt-3">
				<div class="card">
					<div class="image-container">
						<img src="@item.Image" class="card-img-top" alt="@item.Name">
					</div>
					<div class="card-body">
						<a href="@Url.Action("ViewDetailt", "Product", new {Id = item.Id})"><h5 class="card-title">@item.Name</h5></a>
						<p class="card-text">Giá: @item.Price vnđ</p>
					</div>
				</div>
			</div>
		}
	}
	else
	{
		<div class="col-sm-12 mt-3">
			<div class="text-center">
				<h3>Không tìm thấy sản phẩm phù hợp</h3>
			</div>
		</div>
	}
</div>