		<div class="row">
			<div class="col-sm-6">
				<input class="form-control" placeholder="Tìm kiếm sản phẩm..." name="keyword" value="@ViewData["keyword"]" style="width:150% ;height:40px !important; margin-bottom: 50px; border-radius:0; text-align:center;" />
			</div>
			<div class="col-sm-2">
				<button type="submit" class="btn btn-outline-primary" style="border-radius:0; width:100%; height:40px !important;margin-left:150%">Tìm kiếm</button>
				<a href="@Url.Action("Add", "Product")" class="btn btn-outline-success" style="border-radius:0; width:80%; height:40px !important;margin-top:10%">Thêm mới</a>
			</div>
		</div>
	</form>
</div>

<div style="margin-bottom:150px">
	<table class="table">
		<thead>
			<tr>
				<th>Tên</th>
				<th>Hình ảnh</th>
				<th>Giá</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>@item.Name</td>
					<td><img src="@item.Image" alt="@item.Name" style="height: 50px; width: auto"></td>
					<td>@item.Price vnđ</td>
					<td>
						<a href="@Url.Action("Edit", "Product", new {id = item.Id})" class="btn btn-outline-primary">Sửa</a>
						<a href="@Url.Action("Delete", "Product", new {id = item.Id})" class="btn btn-outline-danger">Xóa</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>

@section Scripts {
	@if (ViewData["notify"] != null && ViewData["notify"] != string.Empty)
	{
		<script>
			alert('@Html.Raw(ViewData["notify"])');
		</script>
	}
}