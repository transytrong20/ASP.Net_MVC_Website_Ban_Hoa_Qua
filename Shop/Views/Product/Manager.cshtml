	ViewData["Title"] = "Quản lý sản phẩm";
}

<h2>Danh sách sản phẩm</h2>
<div class="form-group">
	<form method="get">
		@*<div class="row">
			<div class="col-sm-6">
				<input class="form-control" placeholder="Tìm kiếm" name="keyword" value="@ViewData["keyword"]" />
			</div>
			<div class="col-sm-6">
				<button type="submit" class="btn btn-outline-primary">Tìm kiếm</button>
				<a href="@Url.Action("Add", "Product")" class="btn btn-outline-success">Thêm mới</a>
			</div>
